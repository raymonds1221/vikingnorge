<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/slot">
    <TextView
	    android:id="@+id/mycar_phone_desc" 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerVertical="true"
	    android:layout_marginLeft="20dp"
	    android:text="Forsikring"
	    android:textSize="21dp"
		android:textColor="#FFFFFFFF" />
    <ImageButton
		android:id="@+id/call_btn"
		android:src="@drawable/call_btn" 
		android:background="#00000000"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true" />
    <FrameLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/call_btn"
        android:layout_marginRight="10dp">
	     <ImageButton android:id="@+id/delete_phone"
	         android:src="@drawable/delete_slot"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:background="#00000000"
	         android:visibility="gone"/>
	      <TextView
			 android:id="@+id/mycar_phone_number" 
			 android:layout_width="wrap_content"
			 android:layout_height="wrap_content"
			 android:text="06000"
			 android:textSize="15dp"
			 android:textColor="#FFFFFFFF" />
    </FrameLayout>
</RelativeLayout>