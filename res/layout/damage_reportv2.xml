<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    <android.support.v4.view.ViewPager android:id="@+id/damage_report_pager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" 
        android:paddingTop="50dp"/>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/header_bar">
        <TextView android:id="@+id/page_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:textColor="#ffffff"
            android:shadowColor="#606060"
	       	android:shadowDx="0"
	       	android:shadowDy="3"
	       	android:shadowRadius="1" />
        <TextView android:id="@+id/header_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="INFORMASJON"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:shadowColor="#606060"
	       	android:shadowDx="0"
	       	android:shadowDy="3"
	       	android:shadowRadius="1" />
        <ImageButton android:id="@+id/close_damage_report"
            android:src="@drawable/dr_close_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="#00000000" />
    </RelativeLayout>
    <ProgressBar android:id="@+id/damage_report_loader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />
</FrameLayout>